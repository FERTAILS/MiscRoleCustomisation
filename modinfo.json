{
    "HarmonyId": "det.rolecustomizationmod",
    "DisplayName": "Misc Role Customisation",
    "Authors": [ "Det", "AlchlcSystm" ],
    "Description": "A branch of colour swapper that allows you to change various visual things about roles.",
    "Version": "1.0.0",
