    "Settings": {
        "TextInputSettings": [
            {
                "Name": "Recruit Label",
                "Description": "Changes what it says on the Recruit Label in your Role Card",
                "DefaultValue": "Recruited",
                "Regex": "[A-Za-z]",
                "CharacterLimit": 100,
                "AvailableInGame": false
            },
            {
                "Name": "Town Traitor Label",
                "Description": "Changes what it says on the Traitor Label in your Role Card",
                "DefaultValue": "Town Traitor",
                "Regex": "[A-Za-z]",
                "CharacterLimit": 100,
                "AvailableInGame": false
            },
            {
                "Name": "VIP Label",
                "Description": "Changes what it says on the VIP Label in your Role Card",
                "DefaultValue": "VIP",
                "Regex": "[A-Za-z]",
                "CharacterLimit": 100,
                "AvailableInGame": false
            },
            {
                "Name": "Court Label",
                "Description": "Changes what it says when the Judge speaks during court",
                "DefaultValue": "Court",
                "Regex": "[A-Za-z]",
                "CharacterLimit": 100,
                "AvailableInGame": false
            },
            {
                "Name": "Jury Label",
                "Description": "Changes what it says when the non-Judge players speak during court",
                "DefaultValue": "Jury",
                "Regex": "[A-Za-z]",
                "CharacterLimit": 100,
                "AvailableInGame": false
            },
            {
                "Name": "Pirate Label",
                "Description": "Changes what it says when the Pirate speaks during a duel (ONLY IN MODDED)",
                "DefaultValue": "Pirate",
                "Regex": "[A-Za-z]",
                "CharacterLimit": 100,
                "AvailableInGame": false
            }
        ],
        "CheckboxSettings": [
            {
                "Name": "Faction Name Next to Role",
                "SettingID": "rolecustomizationmod.showfactionname",
                "Description": "If a role has changed faction, show the name of the faction next to the role in the graveyard and WDAH.",
                "DefaultValue": false,
                "AvailableInGame": false
            },
            {
                "Name": "Faction-Specific Role Names",
                "SettingID": "rolecustomizationmod.factionspecificnames",
                "Description": "Uses a special string table you can edit that changes Role Names depending on what faction they belong to.<color=#FF0000> WARNING: This setting will break role names if you do not have the text editor mod. You must add all strings from this mod's xmls to your xml. To download these xmls, there will be a button under Mod Actions that will send you to a Google Drive containing the strings needed.</color>",
                "DefaultValue": false,
                "AvailableInGame": false
            }
        ],
